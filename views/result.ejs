<!-- views/result.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Moon Phase Result</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>Moon Phase for <%= date %> <span style="font-size: 2rem;"><%= moonData.phaseEmoji %></span></h1>
    <p><strong>Phase:</strong> <%= moonData.phase %></p>
    <p><strong>Waxing:</strong> <%= moonData.waxing ? "Yes" : "No" %></p>
    <p><strong>Waning:</strong> <%= moonData.waning ? "Yes" : "No" %></p>
    <p><strong>Lunar Age:</strong> <%= moonData.lunarAge.toFixed(2) %> days</p>
    <p><strong>Next Full Moon:</strong> <%= new Date(moonData.nextFullMoon).toLocaleDateString() %></p>
    <p><strong>Last Full Moon:</strong> <%= new Date(moonData.lastFullMoon).toLocaleDateString() %></p>
    
    <a href="/finder" class="button">Back to Finder</a>
    <a href="/" class="button">Back to Home</a>
  </div>
</body>
</html>
